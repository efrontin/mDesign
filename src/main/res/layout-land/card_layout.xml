<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
        android:background="@color/colorDarkGrey"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:cardBackgroundColor="@color/colorLightGrey"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/size_300"
                android:layout_height="@dimen/size_300"
                android:text="@string/avatar_name"
                android:id="@+id/ui_image_view"
                android:background="@drawable/ev"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_margin="@dimen/space_16"
        />
            <TextView
                    android:textSize="@dimen/title_size"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/space_16"
                    app:layout_constraintLeft_toRightOf="@+id/ui_image_view"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:background="@color/colorLightBlue"
                    android:id="@+id/ui_title_card"
                    android:text="Hello c'est Joe le poulpe "
            />
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_40"
                    android:layout_marginLeft="@dimen/space_16"
                    android:layout_marginRight="@dimen/space_16"
                    android:id="@+id/ui_resume"
                    android:text="@string/description_large"
                    android:padding="@dimen/size_8"
                    android:background="@color/colorLightYellow"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/ui_image_view"
                    app:layout_constraintTop_toTopOf="@id/ui_title_card"
            />
            <ImageButton
                    style="@style/ConstraintIconXl"
                    android:layout_marginRight="@dimen/size_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ui_resume"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@drawable/iconfinder_heart_red"
                    android:id="@+id/ui_image_button1"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintEnd_toEndOf="parent"
            />
            <ImageButton
                    style="@style/ConstraintIconXl"
                    app:layout_constraintTop_toBottomOf="@id/ui_resume"
                    android:layout_marginRight="@dimen/size_8"
                    app:layout_constraintEnd_toStartOf="@id/ui_image_button1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/icon_unlike"
                    android:id="@+id/ui_image_button2"
            />
            <ImageButton
                    style="@style/ConstraintIconXl"
                    android:layout_marginRight="@dimen/size_8"
                    app:layout_constraintTop_toBottomOf="@id/ui_resume"
                    app:layout_constraintEnd_toStartOf="@id/ui_image_button2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:background="@drawable/icon_like"

            />


        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>







